{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="wrapper">
    <h1>{{ board.name }} Board</h1>
    <h5>Project: {{ board.project.name }}</h5>

    <a href="{{ path('app_status_new', {id : board.id}) }}">
        <button class="btn btn-outline-primary">
            <i class="fa fa-plus"></i>New Status
        </button>
    </a>

    <div class="row">
        {% for status in board.statuses %}
            <div class="card col-md-3 position-relative">
                <h3>
                    {{ status.name }}
                    <a href="{{ path('app_status_delete', {id: status.id}) }}">
                        <i class="fa fa-trash text-danger" style="font-size: 0.5em;"></i>
                    </a>
                </h3>
                <ul class="list-group">
                {% for mainTask in status.mainTasks %}
                    <li class="list-group-item">{{ mainTask.task.title }}</li>
                {% endfor %}
                    <li class="list-group-item">
                        <a class="btn btn-secondary" href="{{ path('app_main_task_new') }}">
                            <i class="fa fa-plus"></i>New Task
                        </a>
                    </li>
                </ul>
            </div>
        {% endfor %}
    </div>
  </div>
{% endblock %}

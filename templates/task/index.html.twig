{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ title }}</h1>

    <table class="table">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Type</th>
            <th>Assigned Users</th>
        </tr>
    {% for task in tasks %}
        <tr>
            <td>{{ task.id }}</td>
            <td>{{ task.title }}</td>
            <td>
                {% if task.mainTask is not null %} main task
                {% elseif task.subTask is not null %} subtask
                {% elseif task.event is not null %} event
                {% endif %}
            </td>
            <td>
                {% for user in task.users %}
                    {{ user.fullName }}, 
                {% endfor %}
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ title }}</h1>

    <a href="{{ path('app_event_new') }}">
        <button class="btn btn-primary">New {{ title }}</button>
    </a>

    <table class="table">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>MainTask</th>
            <th>Start</th>
            <th>Duration</th>
        </tr>
    {% for event in events %}
        <tr>
            <td>{{ event.id }}</td>
            <td>{{ event.task.title }}</td>
            <td>{{ event.mainTask.task.title }}</td>
            <td>{{ event.start|date("d-m-Y h:i") }}</td>
            <td>{{ event.duration }} hours</td>
            <td>
                <a href="{{ path('app_event_edit', {id : event.id} ) }}">
                    <button class="btn btn-secondary"><span class="fa fa-pen"></span></button>
                </a>
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}

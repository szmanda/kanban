{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ title }}</h1>

    <a href="{{ path('app_sub_task_new') }}">
        <button class="btn btn-primary">New {{ title }}</button>
    </a>

    <table class="table">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>MainTask</th>
            <th>Position</th>
        </tr>
    {% for sub_task in sub_tasks %}
        <tr>
            <td>{{ sub_task.id }}</td>
            <td>{{ sub_task.task.title }}</td>
            <td>{{ sub_task.mainTask.task.title }}</td>
            <td>{{ sub_task.position }}</td>
            <td>
                <a href="{{ path('app_sub_task_edit', {id : sub_task.id} ) }}">
                    <button class="btn btn-secondary"><span class="fa fa-pen"></span></button>
                </a>
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}
